<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
<!--Progressbar texts-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewProgressbar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Progressbar1"
                android:textSize="11sp"
                android:textStyle="bold"
                android:gravity="start"/>

            <TextView
                android:id="@+id/textViewProgressbar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Progressbar2"
                android:textSize="11sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textViewProgressbar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/Progressbar3"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>


<!--Forms-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/textViewFormTitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/FormTitle1"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/FormInputFName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="name"
                android:ems="10"
                android:hint="@string/FormInput1"
                android:inputType="text"
                android:minHeight="48dp" />
            <EditText
                android:id="@+id/FormInputAddress1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/FormInput2"
                android:inputType="textMultiLine"
                android:minHeight="48dp"
                android:autofillHints="postalAddress"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/FormInputAddress2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/FormInput3"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:autofillHints="postalAddress"
                    android:layout_weight="1"
                    />
                <EditText
                    android:id="@+id/FormInputZip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/FormInput4"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:autofillHints="postalAddress"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/textViewGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/FormGender"
                    android:textSize="20sp"
                    />

                <RadioGroup
                    android:id="@+id/RadioGroupGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButtonMale"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="@string/RButtonMale"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/radioButtonFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="@string/RButtonFemale"
                        android:textSize="20sp" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="0sp">

                <TextView
                    android:id="@+id/textViewTitleDigitalIdentity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/FormTitleDigitalIdentity"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/FormInputEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="email"
                    android:ems="10"
                    android:hint="@string/FormInputEmail"
                    android:inputType="textEmailAddress"
                    android:minHeight="48dp">

                </EditText>

                <EditText
                    android:id="@+id/FormInputPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="password"
                    android:ems="10"
                    android:hint="@string/FormInputPassword"
                    android:inputType="textPassword"
                    android:minHeight="48dp"></EditText>

                <EditText
                    android:id="@+id/FormInputConfirmPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="password"
                    android:ems="10"
                    android:hint="@string/FormInputConfirmPassword"
                    android:inputType="textPassword"
                    android:minHeight="48dp"></EditText>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/SwitchMarketing"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/SwitchMessage"
                    android:textSize="12sp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    />

                <CheckBox
                    android:id="@+id/CheckboxTerms"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="20sp"
                    android:text="@string/CheckBoxMessage">

                </CheckBox>

                <Button
                    android:id="@+id/ButtonSignup"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="40sp"
                    android:text="@string/ButtonMessage">

                </Button>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
